{
	"name": "long_run",
	"version": "1.0.0",
	"description": "Workflow with Argo task which rns for 5 minutes",
	"informatics_gateway": {
		"ae_title": "MONAI",
		"export_destinations": [
			"ORTHANC"
		]
	},
	"tasks": [
		{
			"id": "mean-pixel-calc",
			"description": "Argo workflow used runs for 5 minutes",
			"type": "argo",
			"args": {
                "namespace": "argo",
                "workflow_template_name": "argo-workflow-sleep-a",
                "server_url": "https://argo-server.argo:2746",
                "allow_insecure": "true"
            },
			"task_destinations":[
				{
					"Name": "export-report"
				}
			],
			"artifacts": {
				"input": [
					{
						"name": "input-dicom",
						"value": "{{ context.input.dicom }}",
                        "mandatory": true
					}
				],
				"output": [
					{
						"name": "report-dicom"
					}
				]
			}
		},
		{
			"id": "export-report",
			"description": "Export encapsulated pdf for mean-pixel-calc",
			"type": "export",
			"args": {
			},
			"export_destinations":[
				{
					"Name": "ORTHANC"
				}
			],
			"artifacts": {
				"input": [
					{
						"name": "report-dicom",
						"value": "{{ context.executions.mean-pixel-calc.artifacts.report }}",
						"mandatory": true
					}
				]
			}
		}
	]
}